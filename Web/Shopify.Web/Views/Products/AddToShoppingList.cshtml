@model Shopify.Web.ViewModels.Products.AddToShoppingListInputModel
@{
    this.ViewData["Title"] = "Add to shopping list";
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ShoppingListId"></label>
        <select asp-for="ShoppingListId" asp-items="@this.Model.ShoppingListItems" class="form-control"></select>
    </div>

    <input type="submit" class="btn btn-success" value="Add" />
</form>
